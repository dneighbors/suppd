<div class="container">
    <%= form_with(model: supplement) do |form| %>

      <% if supplement.errors.any? %>
        <div class="row">
          <div class="col-10" id="error_explanation">
            <h2><%= pluralize(supplement.errors.count, "error") %> prohibited this supplement from being saved:</h2>

            <ul>
              <% supplement.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

    <div class="row">
      <div class="col-10 field">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.order(:name), :id, :name, {}, {class:'form-select form-select-lg mb-3'} %>
      </div>
    </div>

    <div class="row">
      <div class="col-10 field">
        <%= form.label :brand_id %>
        <%= form.collection_select :brand_id, Brand.order(:name), :id, :name, {}, {class:'form-select form-select-lg mb-3'} %>
      </div>
    </div>

    <div class="row">
      <div class="col-10 field">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control form-control-lg' %>
      </div>
    </div>

    <div class="row">
      <div class="col-10 actions">
        <%= form.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

    <% end %>
</div>
